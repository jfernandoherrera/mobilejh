@model listarproy.Models.ListUser

@{
    ViewBag.Title = "Create";
}

<h2>Solo necesitas el nombre, piensa muy bien como quieres clasificar tu lista!</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style='clear:both; width: 370px;'>
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdUser, new { @Value = User.Identity.Name })

        <div class="form-group">
            Nombre
            <div class="col-md-6">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })


                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear" class="btn btn-default" />
            </div>
        </div>
    </div>
}

            <div class ="buttonboxback">
    @Html.ActionLink("Regresar", "Index")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
